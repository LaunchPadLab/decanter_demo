<div class="row">
  <h2>New Trip</h2>
  <%= form_for(@trip) do |f| %>
    <fieldset>
      <%= f.label :name %>
      <%= f.text_field :name %>
    </fieldset>
    <fieldset>
      <%= f.label :start_date %>
      <%= f.text_field :start_date, class: 'datepicker' %>
    </fieldset>
    <fieldset>
      <%= f.label :end_date %>
      <%= f.text_field :end_date, class: 'datepicker' %>
    </fieldset>
    <ul class="destinations">
      <h3>Destinations</h3>
      <%= f.fields_for :destinations do |ff| %>
        <li>
          <fieldset>
            <%= ff.label :city %>
            <%= ff.text_field :city %>
          </fieldset>
          <fieldset>
            <%= ff.label :state %>
            <%= ff.text_field :state %>
          </fieldset>
          <fieldset>
            <%= ff.label :arrival_date %>
            <%= ff.text_field :arrival_date, class: 'datepicker' %>
          </fieldset>
          <fieldset>
            <%= ff.label :departure_date %>
            <%= ff.text_field :departure_date, class: 'datepicker' %>
          </fieldset>
        </li>
      <% end %>
    </ul>
    <fieldset>
      <%= f.submit %>
    </fieldset>
  <% end %>
</div>
